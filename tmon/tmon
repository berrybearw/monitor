#      sh /u1/etc/tmon/script/chk_ttbs $ZONE |tee $tmp_file > /dev/null
#      cat "$tmp_file" >> $alert_file
#      cat "$tmp_file" >> $log_dir/"$today".log
#   elif [ "$w_of_m_ttbk_set" == "0" ] && [ "$on_day" == "$on_ttbk_set" ];then
#      sh /u1/etc/tmon/script/chk_ttbs $ZONE |tee $tmp_file > /dev/null
#      cat "$tmp_file" >> $alert_file
